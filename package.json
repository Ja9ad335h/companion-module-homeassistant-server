{
	"name": "homeassistant-server",
	"version": "0.8.2",
	"api_version": "1.0.0",
	"description": "Home Assistant Server",
	"keywords": [
		"Generic"
	],
	"manufacturer": "Home Assistant",
	"product": "Server",
	"shortname": "homeassistant-server",
	"homepage": "https://github.com/bitfocus/companion-module-homeassistant-server#readme",
	"main": "dist/index.js",
	"scripts": {
		"prepare": "husky install",
		"build": "npx rimraf dist && npx typescript@~4.5 -p tsconfig.build.json",
		"build:main": "tsc -p tsconfig.build.json",
		"dev": "tsc -p tsconfig.build.json --watch",
		"lint:raw": "eslint --ext .ts --ext .js --ignore-pattern dist",
		"lint": "yarn lint:raw .",
		"lint-fix": "yarn lint --fix",
		"license-validate": "yarn sofie-licensecheck",
		"postinstall": "yarn build"
	},
	"author": "Julian Waller <git@julusian.co.uk>",
	"license": "MIT",
	"prettier": "@sofie-automation/code-standard-preset/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint:raw --fix"
		]
	},
	"engines": {
		"node": "^14 || ^16"
	},
	"dependencies": {
		"@types/node": "^14.18.12",
		"@types/ws": "^8.5.3",
		"home-assistant-js-websocket": "^7.0.2",
		"type-fest": "^2.12.2",
		"ws": "^8.5.0"
	},
	"devDependencies": {
		"@sofie-automation/code-standard-preset": "~2.0",
		"typescript": "~4.5"
	},
	"bugs": {
		"url": "https://github.com/bitfocus/companion-module-homeassistant-server/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-homeassistant-server.git"
	}
}
