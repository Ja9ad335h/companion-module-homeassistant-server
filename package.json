{
	"name": "homeassistant-server",
	"version": "1.1.0",
	"main": "dist/index.js",
	"type": "module",
	"scripts": {
		"prepare": "husky",
		"build": "rimraf dist && yarn build:main",
		"build:main": "tsc -p tsconfig.build.json",
		"dev": "tsc -p tsconfig.build.json --watch",
		"lint:raw": "run eslint --ext .ts --ext .js --ignore-pattern dist --ignore-pattern pkg",
		"lint": "run lint:raw .",
		"dist": "yarn companion-module-build",
		"eslint": "./node_modules/.bin/eslint",
		"prettier": "./node_modules/.bin/prettier"
	},
	"license": "MIT",
	"prettier": "@companion-module/tools/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"run prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"run lint:raw --fix"
		]
	},
	"engines": {
		"node": "^18.12"
	},
	"dependencies": {
		"@companion-module/base": "~1.7.1",
		"debounce-fn": "^6.0.0",
		"home-assistant-js-websocket": "^9.4.0",
		"ws": "^8.18.0"
	},
	"devDependencies": {
		"@companion-module/tools": "^1.5.1",
		"@types/node": "^18.19.43",
		"@types/ws": "^8.5.12",
		"husky": "^9.1.4",
		"lint-staged": "^15.2.8",
		"rimraf": "^5.0.10",
		"typescript": "~5.1.6"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-homeassistant-server.git"
	},
	"packageManager": "yarn@4.4.0"
}
